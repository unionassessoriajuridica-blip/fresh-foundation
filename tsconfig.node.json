{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [],
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["vite.config.ts", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "index.ts"]
}
